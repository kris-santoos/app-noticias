<div class="row p-3 m-0 border-0 bd-example m-0 border-0">
    <div class="col-sm-12 align-self-start">
        <h1>Cadastre-se</h1>
    </div>

    <div class="col-md-6 offset-md-3 col-sm-12">
        <%= form_for @user do |f| %>
        <%= render 'layouts/error_messages', object: f.object %>

        <div class="form-group">
            <%= f.label :name, class: "col-sm-2 col-form-label"  %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :email, class: "col-sm-2 col-form-label"  %>
            <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :password, class: "col-sm-2 col-form-label"  %>
            <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
            <%= f.label :password_confirmation, class: "col-form-label"  %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
        <% end %>
            
    </div>
</div>

