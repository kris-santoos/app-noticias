<h1 class="p-5 text-center">Meus Artigos</h1>

<div class="mb-5">
  <%= link_to "Voltar", articles_path, class: "btn btn-primary btn-save-news" %>
</div>

<% @saved_news.each do |news| %>
  <div class="mb-3">
    <hr>
    <div class="text-end">  
      <%= button_to "Remover", saved_news_path(news), method: :delete, class: "btn btn-danger" %>
    </div>
    <h3><%= news.title %></h3>
    <p><%= news.description %></p>
    <p><strong>Fonte:</strong> <%= news.source %></p>
    <a href="<%= news.url %>" target="_blank">Leia mais â†’</a>
  </div>
<% end %>

