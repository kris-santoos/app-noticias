<div class="row p-3 m-0 border-0 bd-example m-0 border-0">
  <div class="col-sm-12 align-self-start">
    <h1>Entrar</h1>
  </div>

  <div class="col-md-6 offset-md-3 col-sm-12">
    <%= form_for :session, url: entrar_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 col-form-label" %>
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, class: "col-sm-2 col-form-label" %>
        <%= f.password_field :password, placeholder: 'Senha', class: 'form-control' %>
      </div>

      <%= f.submit 'Entrar', class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>